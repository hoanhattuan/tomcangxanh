<!DOCTYPE html>
<html>
<head>
  <% include ../../partialsManager/head.ejs %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script type="text/javascript">
    var sock = "";
    var socket = io.connect("<%=conf%>");
    sock = socket;
    var ishompage_loaddata = false;
  </script>
</head>
<body onload="loadRealTime('<%=conf%>','<%=token%>','<%=secu%>','<%=userid%>',sock,ishompage_loaddata);countNotification(sock,'<%=userid%>');" class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
  <% include ../../partialsManager/nav.ejs %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <ol class="breadcrumb">
        <li><a href="/quantrac/quanly"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="/quantrac/quanly/loaidulieu/themloaidulieu">Thêm loại dữ liệu</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- Start main activity -->
      <div class="padding-top-bottom"></div>
      <% include ../../partialsManager/partialsDisplayError.ejs %>
      <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
              <div class="box-header text-center with-border">
              <h3 class="box-title">Thêm loại dữ liệu</h3>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                <form class="form-horizontal" id="frmLoaiDuLieu" action="/quantrac/quanly/loaidulieu/themloaidulieu" method="post">
                  <div class="form-group">
                    <label class="control-label col-lg-4 col-md-4 col-sm-4" for="datatype_id">Mã loại dữ liệu:</label>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                      <div class="row">
                        <div class="col-md-8  col-xs-12">
                          <div class="input-group">
                            <input type="text" class="form-control" placeholder="Nhập id loại dữ liệu. ví dụ: 001" name="datatype_id"/>
                            <div style="color:red;font-weight:bold;" class="input-group-addon">(*)</div>
                          </div>
                          <span id="errordatatype_id" class="error"></span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-lg-4 col-md-4 col-sm-4" for="datatype_name">Tên loại dữ liệu:</label>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                      <div class="row">
                        <div class="col-md-8  col-xs-12">
                          <div class="input-group">
                            <input type="text" class="form-control" placeholder="Nhập tên loại dữ liệu" name="datatype_name"/>
                            <div style="color:red;font-weight:bold;" class="input-group-addon">(*)</div>
                          </div>
                          <span id="errordatatype_name" class="error"></span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-lg-4 col-md-4 col-sm-4" for="datatype_description">Mô tả về loại dữ liệu:</label>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                      <div class="row">
                        <div class="col-md-8  col-xs-12">
                          <div class="responsive-text-area">
	                          <textarea class="textareainput" name="datatype_description" id="datatype_description"></textarea>
	                        </div>
                          <span id="errordatatype_description" class="error"></span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-lg-4 col-md-4 col-sm-4" for="datatype_unit">Đơn vị của loại dữ liệu:</label>
                    <div class="col-lg-8 col-md-8 col-sm-8">
                      <div class="row">
                        <div class="col-md-8  col-xs-12">
                          <div class="input-group">
                            <input type="text" class="form-control" placeholder="Nhập đơn vị" name="datatype_unit"/>
                            <div style="color:red;font-weight:bold;" class="input-group-addon">(*)</div>
                          </div>
                          <span id="errordatatype_unit" class="error"></span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-lg-offset-5 col-lg-8 col-md-offset-5 col-md-8 col-sm-offset-5 col-sm-8">
                      <div class="row">
                        <div class="col-md-8  col-xs-12">
                          <input type="submit" class="btn btn-primary" name="btnThemLoaiDuLieu" value="Thêm"/>
                          <a href="/quantrac/quanly/loaidulieu/danhsachloaidulieu" style="margin-left:20px;" class="btn btn-primary">Hủy</a>
                          <span style="color:red;font-weight:bold;" >(*)</span><span> là bắt buộc</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
      </div>
      <!--- Nhúng các modal cần thiết vào -->
      <% include ../../partialsManager/partialsModalUserNotifi.ejs %>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="footer-title main-footer">
    <div class="pull-right hidden-xs">
      <b>Phiên bản</b> 1.0
    </div>
