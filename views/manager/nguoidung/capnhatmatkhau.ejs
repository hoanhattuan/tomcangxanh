<!DOCTYPE html>
<html>
<head>
  <% include ../../partialsManager/head.ejs %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <!-- I define -->
  <script src="/socket.io/socket.io.js"></script>
  <script type="text/javascript">
    var sock = "";
    var ishompage_loaddata = false;
    var socket = io.connect("<%=conf%>");
    sock = socket;
  </script>
</head>
<body onload="loadRealTime('<%=conf%>','<%=token%>','<%=secu%>','<%=userid%>',sock,ishompage_loaddata);countNotification(sock,'<%=userid%>');" class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
  <% include ../../partialsManager/nav.ejs %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="/quantrac/quanly/nguoidung/capnhatmatkhau/<%=userid%>">Cập nhật mật khẩu</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <!-- Start main activity -->
      <!--- Nhúng các modal cần thiết vào -->
      <% include ../../partialsManager/partialsModalUserNotifi.ejs %>
      <div class="padding-top-bottom"></div>
      <% include ../../partialsManager/partialsDisplayError.ejs %>
      <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
              <div class="box-header text-center with-border">
                <h3 class="box-title">Cập nhật mật khẩu</h3>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                <form class="form-horizontal" name="frmCNMatKhau" id="frmCNMatKhau">
                  <div class="form-group">
										<label class="control-label col-lg-4 col-md-4 col-sm-4" for="oldPassword">Mật khẩu cũ:</label>
										<div class="col-lg-8 col-md-8 col-sm-8">
											<div class="row">
												<div class="col-md-8  col-xs-12">
													<div class="input-group">
                            <input type="hidden" value="<%=userid%>" name="user_id"/>
														<input type="password" class="form-control" placeholder="Nhập mật khẩu cũ" name="oldPassword" id="oldPassword"/>
                            <div style="color:red;font-weight:bold;" class="input-group-addon">(*)</div>
													</div>
													<span id="erroroldPassword" class="error"></span>
												</div>
											</div>
										</div>
									</div>
                  <div class="form-group">
										<label class="control-label col-lg-4 col-md-4 col-sm-4" for="newPassword">Mật khẩu mới:</label>
										<div class="col-lg-8 col-md-8 col-sm-8">
											<div class="row">
												<div class="col-md-8  col-xs-12">
                          <div class="input-group">
														<input type="password" placeholder="Nhập mật khẩu mới" class="form-control pull-right" name="newPassword" id="newPassword">
                            <div style="color:red;font-weight:bold;" class="input-group-addon">(*)</div>
													</div>
													<span id="errornewPassword" class="error"></span>
												</div>
											</div>
										</div>
									</div>
                  <div class="form-group">
										<label class="control-label col-lg-4 col-md-4 col-sm-4" for="comparePassword">Xác nhận mật khẩu:</label>
										<div class="col-lg-8 col-md-8 col-sm-8">
											<div class="row">
												<div class="col-md-8  col-xs-12">
													<div class="input-group">
														<input type="password" class="form-control" placeholder="Nhập lại mật khẩu" name="comparePassword" id="comparePassword"/>
                            <div style="color:red;font-weight:bold;" class="input-group-addon">(*)</div>
													</div>
													<span id="errorcomparePassword" class="error"></span>
												</div>
											</div>
										</div>
									</div>
                  <div class="form-group">
										<div class="col-lg-offset-5 col-lg-8 col-md-offset-5 col-md-8 col-sm-offset-5 col-sm-8">
											<div class="row">
												<div class="col-md-8  col-xs-12">
                          <input type="button" class="btn btn-primary" onclick="changeUserPassword('<%=conf%>','<%=token%>','<%=secu%>','<%=userid%>','quanly')" name="btnCapNhatThongTin" value="Cập nhật"/>
                          <a href="/quantrac/quanly" style="margin-left:20px;" class="btn btn-primary">Hủy</a>
													<span style="color:red;font-weight:bold;" >(*)</span><span> là bắt buộc</span>
												</div>
											</div>
										</div>
									</div>
                </form>
              </div>
            </div>
          </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <script>
    function displaySuccess(){
      $('.displaySuccess').html('Đã cập nhật thành công');
      $('.displaySuccess').css('display','block');
      setTimeout(function () {
        $('.displaySuccess').css('display','none');
      }, 2000);
    }
  </script>
  <!-- /.content-wrapper -->
  <footer class="footer-title main-footer">
    <div class="pull-right hidden-xs">
      <b>Phiên bản</b> 1.0
    </div>
    <strong>Copyright &copy; Bộ môn Công Nghệ Phần Mềm,<a target="_blank" href="http://cit.ctu.edu.vn/"> Khoa CNTT & TT</a>, <a target="_blank" href="http://ctu.edu.vn/">Trường ĐH Cần Thơ</a>.</strong>
  </footer>
  <% include ../../partialsManager/scripts.ejs %>
  <!-- Control Sidebar -->
  <% include ../../partialsManager/sidebar.ejs %>
</div>
<!-- ./wrapper -->
</body>
<!-- jQuery 2.2.3 -->

</html>
