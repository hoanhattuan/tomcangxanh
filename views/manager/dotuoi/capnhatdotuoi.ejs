<!DOCTYPE html>
<html>
<head>
  <% include ../../partialsManager/head.ejs %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script type="text/javascript">
    var sock = "";
    var socket = io.connect("<%=conf%>");
    sock = socket;
    var ishompage_loaddata = false;
  </script>
</head>
<body onload="loadRealTime('<%=conf%>','<%=token%>','<%=secu%>','<%=userid%>',sock,ishompage_loaddata);countNotification(sock,'<%=userid%>');" class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">
  <% include ../../partialsManager/nav.ejs %>
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <ol class="breadcrumb">
        <li><a href="/quantrac/quanly"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="/quantrac/quanly/dotuoi/capnhatdotuoi/<%=agedata.age_id%>">Cập nhật độ tuổi của tôm</a></li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <!--- Nhúng các modal cần thiết vào -->
      <% include ../../partialsManager/partialsModalUserNotifi.ejs %>
      <!-- Start main activity -->
      <div class="padding-top-bottom"></div>
      <% include ../../partialsManager/partialsDisplayError.ejs %>
      <div class="row">
          <div class="col-lg-12">
            <div class="box box-primary">
              <div class="box-header text-center with-border">
                <h3 class="box-title">Cập nhật độ tuổi của tôm</h3>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                <form class="form-horizontal" id="frmDoTuoi" onsubmit="return confirm('Bạn có chắc chắn thay đổi không ?')" action="/quantrac/quanly/dotuoi/capnhatdotuoi" method="post">
                    <div class="form-group">
                      <label class="control-label col-lg-4 col-md-4 col-sm-4" for="age_valueMin">Giá trị bắt đầu:</label>
                      <div class="col-lg-8 col-md-8 col-sm-8">
                        <div class="row">
                          <div class="col-md-8  col-xs-12">
                            <div class="input-group">
                              <input type="text" value="<%=agedata.age_id%>" style="display: none;" name="age_id"/>
                              <input value="<%=agedata.age_valueMin%>" type="text" class="form-control" placeholder="Nhập giá trị bắt đầu" id="age_valueMin" name="age_valueMin"/>
                              <div style="color:red;font-weight:bold;" class="input-group-addon">(*)</div>
                            </div>
                            <span id="errorage_valueMin" class="error"></span>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="control-label col-lg-4 col-md-4 col-sm-4" for="age_valueMax">Giá trị kết thúc:</label>
                      <div class="col-lg-8 col-md-8 col-sm-8">
                        <div class="row">
                          <div class="col-md-8  col-xs-12">
                            <div class="input-group">
                              <input value="<%=agedata.age_valueMax%>" type="text" class="form-control" placeholder="Nhập giá trị kết thúc" id="age_valueMax" name="age_valueMax"/>
                              <div style="color:red;font-weight:bold;" class="input-group-addon">(*)</div>
                            </div>
                            <span id="errorage_valueMax" class="error"></span>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="control-label col-lg-4 col-md-4 col-sm-4" for="age_description">Mô tả về độ tuổi:</label>
                      <div class="col-lg-8 col-md-8 col-sm-8">
                        <div class="row">
                          <div class="col-md-8  col-xs-12">
                            <div class="responsive-text-area">
                              <textarea class="textareainput" id="age_description" name="age_description"><%=agedata.age_description%></textarea>
                            </div>
                            <span style="color:red;font-weight:bold;">(*)</span>
                            <span id="errorage_description" class="error"></span>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-lg-offset-5 col-lg-8 col-md-offset-5 col-md-8 col-sm-offset-5 col-sm-8">
                        <div class="row">
                          <div class="col-md-8  col-xs-12">
                            <input type="submit" class="btn btn-primary" name="btnCapNhatDoTuoi" value="Cập nhật"/>
                            <a href="/quantrac/quanly/dotuoi/danhsachdotuoi" style="margin-left:20px;" class="btn btn-primary">Hủy</a>
                            <span style="color:red;font-weight:bold;" >(*)</span><span> là bắt buộc</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>
              </div>
            </div>
          </div>
        </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="footer-title main-footer">
    <div class="pull-right hidden-xs">
      <b>Phiên bản</b> 1.0
    </div>
    <strong>Copyright &copy; Bộ môn Công Nghệ Phần Mềm,<a target="_blank" href="http://cit.ctu.edu.vn/"> Khoa CNTT & TT</a>, <a target="_blank" href="http://ctu.edu.vn/">Trường ĐH Cần Thơ</a>.</strong>
  </footer>
  <% include ../../partialsManager/scripts.ejs %>
  <!-- Control Sidebar -->
  <% include ../../partialsManager/sidebar.ejs %>
</div>
<!-- ./wrapper -->
</body>
<!-- jQuery 2.2.3 -->

</html>
